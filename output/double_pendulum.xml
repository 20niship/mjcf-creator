<mujoco model="double_pendulum">
    <compiler angle="degree" inertiafromgeom="true"/>
    <option gravity="0 0 -9.81" integrator="RK4" timestep="0.005"/>
    <asset>
        <texture builtin="checker" height="512" name="grid" rgb1="0.1 0.2 0.3" rgb2="0.2 0.3 0.4" width="512"/>
        <material name="floor_mat" texrepeat="8 8" texture="grid"/>
    </asset>
    <worldbody>
        <light diffuse="0.8 0.8 0.8" directional="true" pos="0 0 3"/>
        <geom material="floor_mat" name="floor" size="5 5 0.1" type="plane"/>
        <body name="base" pos="0 0 1.5">
            <geom name="base_geom" size="0.08 0 0" type="sphere"/>
            <body name="link1" pos="0.5 0 0">
                <joint axis="0 1 0" name="joint1" pos="-0.5 0 0" type="hinge"/>
                <geom fromto="-0.5 0 0 0.5 0 0" name="link1_geom" rgba="0.8 0.2 0.2 1" size="0.05 0 0" type="capsule"/>
                <body name="link2" pos="1 0 0">
                    <joint axis="0 1 0" name="joint2" pos="-0.5 0 0" type="hinge"/>
                    <geom fromto="-0.5 0 0 0.5 0 0" name="link2_geom" rgba="0.2 0.2 0.8 1" size="0.05 0 0" type="capsule"/>
                    <geom name="tip" pos="0.5 0 0" rgba="1 1 0 1" size="0.08 0 0" type="sphere"/>
                </body>
            </body>
        </body>
    </worldbody>
    <actuator/>
    <sensor/>
    <equality/>
    <tendon/>
</mujoco>
